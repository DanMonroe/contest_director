{{#paper-dialog fullscreen=fullscreen clickOutsideToClose=true onClose=(action attrs.oncancel)}}

    {{#paper-dialog-content}}

        {{#x-card
        onsubmit=attrs.onsubmit
        oncancel=attrs.oncancel
        title='Register with Contest Director'
        cancelButtonText='Cancel'
        submitButtonText='Register'
        buttonDisabled=validations.messages.length
        }}

            <div class="row">
                {{x-input
                    value=model.email
                    errors=validations.attrs.model.email.messages
                    classNames='col s12'
                    type='email'
                    label='Username'}}
            </div>
            <div class="row">
                {{x-input
                    value=model.password
                    errors=validations.attrs.model.password.messages
                    classNames='col s12'
                    type='password'
                    label='Password'
                }}
            </div>
            <div class="row">
                {{x-input
                    value=model.passwordConfirmation
                    errors=validations.attrs.model.passwordConfirmation.messages
                    classNames='col s12'
                    type='password'
                    label='Confirm Password'
                }}
            </div>
        {{/x-card}}
    {{/paper-dialog-content}}


{{/paper-dialog}}
