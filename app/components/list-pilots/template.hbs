<md-list-item class="md-1-line titleHeight">
    <div class="md-no-style md-list-item-inner">
        Pilots
    </div>
</md-list-item>

{{paper-divider}}

<md-content class="md-padding">

    {{#paper-card as |card|}}
        {{#paper-list}}
            {{#each content.pilots as |pilot|}}
                {{#paper-item}}
                    <div class="md-list-item-text">
                        <p>{{pilot.fullName}}</p>
                    </div>
                {{/paper-item}}
                {{paper-divider}} {{! OR {{paper-divider inset=true}}
            {{/each}}
        {{/paper-list}}
        <div layout="row" layout-align="end center">
            {{#unless isEditing}}
                {{#paper-button disabled=addButtonDisabled icon-button=true mini=true class="md-fab md-warn" onClick=(action "toggleEditing")}}{{paper-icon icon="add"}}{{/paper-button}}
            {{/unless}}
        </div>
    {{/paper-card}}

    {{#liquid-if isEditing class="new-contest"}}

        {{#paper-card as |card|}}
            {{#card.title as |title|}}
                {{#title.text as |text|}}
                    {{#text.headline}}New Pilot{{/text.headline}}
                {{/title.text}}
            {{/card.title}}

            {{#card.content class="layout-row layout-align-space-between"}}
                {{paper-input flex=true label="First Name" onChange=(action (mut firstname)) value=firstname required=true errorMessages=(hash required="Name is required")}}
                {{paper-input flex=true label="Last Name" onChange=(action (mut lastname)) value=lastname required=true errorMessages=(hash required="Name is required")}}
            {{/card.content}}
            {{#card.content class="layout-row layout-align-space-between"}}
                {{paper-input flex=true label="EMail" type=email onChange=(action (mut email)) value=email}}
                {{paper-input flex=true label="Phone" type=text onChange=(action (mut phone)) value=phone}}
                {{paper-input flex=true label="AMA Number" type=text onChange=(action (mut amanumber)) value=amanumber}}
            {{/card.content}}



            {{#card.actions}}
                {{#paper-button onClick=(action "toggleEditing")}}Cancel{{/paper-button}}
                {{#paper-button primary=true onClick=(action "save")}}Save{{/paper-button}}
            {{/card.actions}}
        {{/paper-card}}




    {{/liquid-if}}

</md-content>

