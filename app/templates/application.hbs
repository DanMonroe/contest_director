
<div layout="column">
    <md-toolbar flex="20" class="md-tall">
        <md-toolbar>
            <div class="md-toolbar-tools">
                {{#paper-button target=toggle action="toggleMenu" icon-button=true}}{{paper-icon icon="menu"}}{{/paper-button}}

                <span flex></span>

                {{#paper-button primary=true onClick=(action "clickRegistration")}}Register{{/paper-button}}
                {{#paper-button primary=true onClick=(action "clickLogin")}}Login{{/paper-button}}
            </div>
        </md-toolbar>
    </md-toolbar>

{{#unless hideContent}}
    <div layout-align="center start" layout="row">
        <md-content class="md-whiteframe-z3 move-up" flex="80">

            {{liquid-outlet}}

        </md-content>
    </div>
{{/unless}}
</div>

{{#if showLogin}}
    {{login-card model=userModel onsubmit=(action 'doLogin') oncancel=(action 'closeLogin')}}
{{/if}}
{{#if showRegistration}}
    {{register-card model=userModel onsubmit=(action 'doRegister') oncancel=(action 'closeRegister')}}
{{/if}}